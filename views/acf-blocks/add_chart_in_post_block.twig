{% spaceless %}

{% set chart_type = layout.chart_type %}

{% if chart_type == 'bar' %}
	{% include 'charts/bar-chart.twig' %}
{% elseif chart_type == 'line' or chart_type == 'radar' %}
	{% include 'charts/line-radar-chart.twig' %}
{% elseif chart_type == 'polarArea' or chart_type == 'pie' or chart_type == 'doughnut' %}
	{% include 'charts/polararea-pie-doughnut.twig' %}
{% endif %}

{% endspaceless %}