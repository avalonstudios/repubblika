{% import 'sections/partials/_macros.twig' as mcr %}

{% spaceless %}
	{% set builder = post.meta('content_builder') %}
	{% for section in builder %}
		{% set section_index = loop.index %}
		{% set layout = section.acf_fc_layout %}
		{% if layout == 'music_demos_lyt' %}
			{% set active = section.active %}
			{% if active %}
				{% set projects = section.music_tracks %}

				{{ mcr.music_demos(section) }}

			{% endif %}
		{% elseif layout == 'text_editor_lyt' %}
			{% set active = section.active %}
			{% if active %}
				{% set editor = section.text_editor %}
				{% set text_color = section.text_color %}
				{% set background_color = section.background_color %}

				{{ mcr.text_editor(section) }}

			{% endif %}
		{% elseif layout == 'reviews_lyt' %}
			{% set active = section.active %}
			{% if active %}
				{% set images = section.images %}

				{{ mcr.reviews(section) }}

			{% endif %}
		{% elseif layout == 'display_upcoming_shows_lyt' %}
			{% set active = section.active %}
			{% if active %}
				{% set images = section.images %}

				{{ mcr.upcoming_shows(section, shows) }}

			{% endif %}
		{% elseif layout == 'logos_lyt' %}
			{% set active = section.active %}
			{% if active %}
				{% set images = section.images %}

				{{ mcr.logos(section, shows) }}

			{% endif %}
		{% endif %}<!-- layout switcher -->
	{% endfor %}
{% endspaceless %}