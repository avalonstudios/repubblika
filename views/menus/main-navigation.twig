{% spaceless %}
	{% if menu.items is not empty %}
		<nav class="navbar fixed-top navbar-toggleable-md navbar-expand-lg scrolling-navbar double-nav">
			<ul class="nav navbar-nav nav-flex-icons ml-auto">
				{% for item in menu.items %}
					{% if loop.first %}
					<li class="nav-item mr-2 animated animation-delay-{{ loop.index }} {{ item.classes|join(' ') }}">
					{% else %}
					<li class="nav-item mx-2 animated animation-delay-{{ loop.index }} {{ item.classes|join(' ') }}">
					{% endif %}
						<a class="nav-link" href="{{ item.link }}"{{ item.target ? 'target="_blank"' }}>{{ item.title }}</a>
						{% if item.children %}
							<ul class="nav-drop">
								{% for child in item.children %}
									<li class="nav-drop-item">
										<a href="{{ child.link }}"{{ item.target ? 'target="_blank"' }}>{{ child.title }}</a>
										{% if child.children %}
											<ul class="nav-drop">
												{% for child in child.children %}
													<li class="nav-drop-item">
														<a href="{{ child.link }}"{{ item.target ? 'target="_blank"' }}>{{ child.title }}</a>
													</li>
												{% endfor %}
											</ul>
										{% endif %}
									</li>
								{% endfor %}
							</ul>
						{% endif %}
					</li>
				{% endfor %}
			</ul>
		</nav><!-- #site-navigation -->
	{% endif %}
{% endspaceless %}