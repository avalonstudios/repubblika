{% spaceless %}
	{% if menu.items is not empty %}
		<nav class="navbar fixed-top navbar-toggleable-md navbar-expand-lg scrolling-navbar ouble-nav -none d-lg-flex main-navigation">
			{% include 'sections/header/branding.twig' %}
			<a data-activates="slide-out" class="button-collapse p-3 d-lg-none position-fixed"><i class="fas fa-bars"></i></a>
			<ul class="nav navbar-nav nav-flex ml-auto d-none d-lg-block">
				{% for item in menu.items %}
					{% if loop.first %}
					<li class="nav-item mr-2 wow animation-delay-{{ loop.index }} {{ item.classes|join(' ') }}">
					{% else %}
					<li class="nav-item mx-2 wow animation-delay-{{ loop.index }} {{ item.classes|join(' ') }}">
					{% endif %}
						<a class="nav-link" href="{{ item.link }}"{{ item.target ? ' target="_blank"' }}>{{ item.title }}</a>
						{% if item.children %}
							<ul class="nav-drop">
								{% for child in item.children %}
									<li class="nav-drop-item">
										<a href="{{ child.link }}"{{ item.target ? ' target="_blank"' }}>{{ child.title }}</a>
										{% if child.children %}
											<ul class="nav-drop">
												{% for child in child.children %}
													<li class="nav-drop-item">
														<a href="{{ child.link }}"{{ item.target ? ' target="_blank"' }}>{{ child.title }}</a>
													</li>
												{% endfor %}
											</ul>
										{% endif %}
									</li>
								{% endfor %}
							</ul>
						{% endif %}
					</li>
				{% endfor %}
			</ul>
		</nav><!-- #site-navigation -->
	{% endif %}
{% endspaceless %}