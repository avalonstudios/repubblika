{% import 'partials/_macros.twig' as mac %}

<nav class="navigation post-navigation" role="navigation">
	<h2 class="screen-reader-text">Post navigation</h2>
	<div class="post-header-navigation">
		{% if post.prev.link is not null %}
		<a class="nav-link-prev" href="{{ post.prev.link }}" rel="prev">
			<div class="thumb">
				<img src="{{ post.prev.thumbnail|resize(150, 150, 'center') }}" alt="">
			</div>
		</a>
		{% endif %}
		{% if post.next.link is not null %}
		<a class="nav-link-next" href="{{ post.next.link }}" rel="next">
			<div class="thumb">
				<img src="{{ post.next.thumbnail|resize(150, 150, 'center') }}" alt="">
			</div>
		</a>
		{% endif %}
		<div class="prev-post">
			<div class="ava-table">
				<div class="ava-cell">
					<h2>{{ post.prev.title }}</h2>
					<span class="date">{{ post.prev.date }}</span>
					{{ mac.words_read_time(post.prev) }}
				</div>
			</div>
		</div>
		<div class="current-post">
			<div class="ava-table">
				<div class="ava-cell">
					<h2>{{ post.title }}</h2>
					<span class="date">{{ post.prev.date }}</span>
					{{ mac.words_read_time(post) }}
				</div>
			</div>
		</div>
		<div class="next-post">
			<div class="ava-table">
				<div class="ava-cell">
					<h2>{{ post.next.title }}</h2>
					<span class="date">{{ post.next.date }}</span>
					{{ mac.words_read_time(post.next) }}
				</div>
			</div>
		</div>
	</div>
</nav>